<% layout('/layouts/biolerplate') -%>

    <body>
        <div class="row mt-3 xyz">
            <div class="col-8 offset-2"> <!-- Adjusted offset for centering -->
                <h3>Listing Details:</h3>
            </div>
            <div class="card col-6 offset-2 show-card"> <!-- Adjusted column sizes -->
                <div class="card-body">
                    <img src="<%=listings.image%>" class="card-img-top show-img" alt="show_image">
                    <p class="card-text"> <i>
                           <b>Owned by : </b> <%=listings.owner.username%>
                        </i>
                    </p>

                    <p class="card-text"> <b>
                            <%=listings.title%>
                        </b></i>
                    </p>

                    <p class="card-text">
                        <%=listings.description%></i>
                    </p>
                    <p class="card-text"> &#8377;<%=listings.price.toLocaleString("en-In")%>/Day</i>
                    </p>
                    <p class="card-text">
                        <%=listings.location%></i>
                    </p>

                    <p class="card-text">
                        <%=listings.country%>
                    </p>





                </div>
            </div>

            <% if(curruser && curruser._id.equals(listings.owner._id)){ %>
                 <div class="btns">
                <a href="/listings/<%=listings.id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
                <!-- Adjusted column size -->
                <form method="post" action="/listings/<%=listings.id%>?_method=DELETE">
                    <button class="btn btn-dark offset-4">Delete</button>
                </form>
            </div>

            <%}%>

            <% if(!curruser || !curruser._id.equals(listings.owner._id)){ %>
                <div class="btns">
              
               <form method="get" action="/payments">
                    <button class="btn btn-dark offset-4">Rent</button>
                </form>
           </div>

           <%}%>
            
           
        </div>
    </body>