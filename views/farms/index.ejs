<% layout('/layouts/biolerplate') -%>

<body>
     <h1>All Farms</h1>
     <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
      <% for(let farm of allFarms){ %>
         <a href="/farms/<%=farm._id%>" class="listing-link">
         <div class="card col">
            <img src="<%=farm.image%>" class="card-img-top" alt="listingImage" style ="height: 20rem;">
            <div class="card-img-overlay"></div>
              <p class="card-text">
               <b><%=farm.description%></b><br>
               &#8377;<%= farm.price ? farm.price.toLocaleString("en-in") + "/6-Months" : 'Price not available' %></p>

            </div> 
            </a>
       <% } %>
     </div>
</body>
